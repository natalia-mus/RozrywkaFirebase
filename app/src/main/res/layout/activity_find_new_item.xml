<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/findItem_title"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:hint="wyszukaj"
            android:textAlignment="center"
            android:textSize="34dp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="20dp"/>




        <Button
            android:id="@+id/findItem_search_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_icon"
            android:foreground="@mipmap/find_icon_white_3"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:layout_marginTop="10dp" />


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/found_movies_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>